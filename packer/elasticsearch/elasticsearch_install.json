{
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "ami_name": "{{user `ami_name`}}",
        "ami_description": "{{user `ami_description`}}",
        "instance_type": "m3.2xlarge",
        "region": "{{user `ami_region`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "source_ami": "{{user `source_ami`}}",
        "ssh_username": "ubuntu",
        "security_group_id": "sg-24ec6652",
        "ami_block_device_mappings": [{
            "device_name": "/dev/sdb",
            "volume_size": 30,
            "volume_type": "gp2",
            "delete_on_termination": true
        },
        {
            "device_name": "/dev/sdc",
            "virtual_name": "ephemeral0"
        }],
        "launch_block_device_mappings": [{
            "device_name": "/dev/sdb",
            "volume_size": 30,
            "volume_type": "gp2",
            "delete_on_termination": true
        },
        {
            "device_name": "/dev/sdc",
            "virtual_name": "ephemeral0"
        }],
        "tags": {
        }
        },
        {
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--vram", "32"],
            ["modifyvm", "{{.Name}}", "--memory", "2048"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
        ],
        "disk_size" : 10000,
        "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.2-server-amd64.iso",
        "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
        "iso_checksum_type": "md5",
        "vm_name": "packer-ubuntu-14.04.2-amd64",
        "http_directory" : "http",
        "http_port_min" : 9101,
        "http_port_max" : 9101,
        "ssh_username": "ubuntu",
        "ssh_password": "ubuntu",
        "ssh_wait_timeout": "50m",
        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=u ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ],
        "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now"
    },
    {
        "type": "docker",
        "image": "ubuntu",
        "commit": true
    }],
    "provisioners": [
    {
        "type": "file",
        "source": "{{user `alf_plugin_path`}}",
        "destination": "/tmp/alfresco-elasticsearch-plugin-1.0-SNAPSHOT.zip"
    },
    {
        "type": "file",
        "source": "../../target/service-sync-bundle-1.1-SNAPSHOT.jar",
        "destination": "/home/ubuntu/service-sync-bundle-1.1-SNAPSHOT.jar"
    },
    {
        "type": "file",
        "source": "files/es-config.txt",
        "destination": "/home/ubuntu/es-config.txt"
    },
    {
        "type": "file",
        "source": "files/kibana4",
        "destination": "/tmp/kibana4"
    },
    {
        "type": "shell",
        "script": "files/prepare-users.sh",
        "execute_command": "echo 'ubuntu' | sudo -S sh '{{ .Path }}'"
    },
    {
        "type": "shell",
        "script": "files/install.sh",
        "execute_command": "echo 'ubuntu' | sudo -S sh '{{ .Path }}'"
    }
    ],
    "post-processors": [{
      "output": "alfresco.box",
      "type": "vagrant",
      "keep_input_artifact": true
    }],
    "variables": {
        "hostname": "packer-test",
        "source_ami": "ami-234ecc54",
        "ami_name": "alfresco-es-{{timestamp}}",
        "alf_plugin_path": "",
        "ami_description": "",
        "ami_region": "eu-west-1",
        "aws_access_key": "",
        "aws_secret_key": "",
        "ssh_key": ""
    }
}
